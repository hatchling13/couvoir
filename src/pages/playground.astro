---
import BaseLayout from '@src/layouts/BaseLayout.astro';

import { css } from '@styled-system/css';

const divStyles = css({
  paddingInline: '4',
  fontSize: '4xl',
  display: 'flex',
  flexDir: 'column',
  gap: '4',
  alignItems: 'center',
});

const spanStyle = css({
  wordBreak: 'keep-all',
  textAlign: 'center',
});

const title = 'playground = f(ui)(cs)(more)';
const description =
  "Play is our brain's favorite way of learning - Diane Ackerman";
---

<BaseLayout title={title} description={description}>
  <div class={divStyles}>
    <span>🚧</span>
    <span class={spanStyle}> 공사중입니다! 더 나은 모습으로 찾아뵐게요! </span>
    <span>🚧</span>
  </div>
</BaseLayout>
