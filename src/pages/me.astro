const headerStyles = css({
  bg: 'white',
  w: 'full',
  mx: '4',
  p: '8',
  rounded: 'md',
  display: 'flex',
  justifyContent: 'space-between',
  alignItems: 'start',
  gap: { base: '6', sm: '12', md: '24', lg: '48', xl: '96' },
  flexWrap: 'wrap',
});

const title = 'me = f(cv)';
const description = 'Cogito, ergo sum - Ren√© Descartes';
---

<BaseLayout title={title} description={description}>
